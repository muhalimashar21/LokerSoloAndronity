<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:weightSum="10"
              tools:context=".fragment.BerandaFragment">


    <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:src="@drawable/slider" />

        <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingTop="0dp"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/text_home"
                    android:text="Selamat Datang Admin"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>



            <!-- Row 1 -->

            <!-- Column 1 -->
            <androidx.cardview.widget.CardView
                    android:id="@+id/ali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/btnkehadiran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Accounting"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Pt Sinar Nusantara"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Dibutuhkan tenaga Accounting "
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="paruh waktu dengan persyaratan "
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="70dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/sas" />

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/delete"
                    android:layout_marginTop="115dp"
                    android:text="Delete"
                    android:layout_gravity="left"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorPutih"
                    android:textSize="12sp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/edit"
                    android:layout_marginTop="115dp"
                    android:text="Edit"
                    android:layout_gravity="right"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorPutih"
                    android:textSize="12sp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/ali2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/btnkehadiran1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Digital Marketing"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Pt Sinar Nusantara"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Dibutuhkan tenaga Accounting "
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="paruh waktu dengan persyaratan "
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="70dp"
                        android:layout_gravity="right"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/garuda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/hapus"
                    android:layout_marginTop="115dp"
                    android:text="Delete"
                    android:layout_gravity="left"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorPutih"
                    android:textSize="12sp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/editt"
                    android:layout_marginTop="115dp"
                    android:text="Edit"
                    android:layout_gravity="right"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorPutih"
                    android:textSize="12sp"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>
        <Button android:layout_width="match_parent"
            android:text="Tambah Loker"
            android:id="@+id/Tambahloker"
            android:background="#F44336"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>